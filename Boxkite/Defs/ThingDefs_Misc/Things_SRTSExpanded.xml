<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Superpod -->

  <ThingDef ParentName="SkyfallerBase">
    <defName>NSRTSBoxKite_Active</defName>
    <label>NSRTSBoxKite active</label>
    <category>Item</category>
    <thingClass>ActiveDropPod</thingClass>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Superpod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <blockWind>true</blockWind>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <selectable>true</selectable>
  </ThingDef>
  
  <ThingDef ParentName="SkyfallerBase">
    <defName>NSRTSBoxKite_Leaving</defName>
    <label>NSRTSBoxKite leaving</label>
    <thingClass>SRTS.SRTSLeaving</thingClass>
    <graphicData>
      <texPath>HotBalloon</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutFlying</shaderType>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <skyfaller>
      <movementType>Accelerate</movementType>
      <reversed>true</reversed>
      <shadow>Things/Skyfaller/SkyfallerShadowDropPod</shadow>
      <shadowSize>(2,2)</shadowSize>
      <anticipationSound>Sound_Launch</anticipationSound>
      <anticipationSoundTicks>-10</anticipationSoundTicks>
      <ticksToImpactRange><min>-40</min><max>-15</max></ticksToImpactRange>
    </skyfaller>
  </ThingDef>

  <ThingDef>
    <defName>NSRTSBoxKite_Active</defName>
    <label>NSRTSBoxKite active</label>
    <category>Item</category>
    <thingClass>ActiveDropPod</thingClass>
    <scatterableOnMapGen>false</scatterableOnMapGen>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Superpod</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <blockWind>true</blockWind>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Flammability>0</Flammability>
    </statBases>
    <selectable>true</selectable>
  </ThingDef>

</Defs>
