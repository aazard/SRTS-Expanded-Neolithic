<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="NECShipBase">
    <defName>NSRTSBoxKite</defName>
    <label>box kite </label>
    <description>It A Box Kite, able to get 95kg air-born. Refuled by repairing with wood. Faster than walking. Light enough to carry. Passenger capacity: 1 -- Speed: Awful -- Fuel capacity: 20 Wood -- Fuel efficiency: Awful -- Cargo capacity: 95kg.

Passenger capacity: 1
----------------------------
Speed: Awful
Fuel capacity: 20 Logs
Fuel efficiency: Awful
----------------------------
Cargo capacity: 35kg</description>
    <graphicData>
      <texPath>BoxKite</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(4,4)</drawSize>
      <drawRotated>false</drawRotated>
    </graphicData>
    <size>(2,2)</size>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <WorkToBuild>1100</WorkToBuild>
      <Flammability>1.0</Flammability>
      <Mass>5</Mass>
      <Beauty>1</Beauty>
    </statBases>
    <costList>
      <WoodLog>20</WoodLog>
      <Cloth>50</Cloth>
    </costList>
    <comps>
      <li Class="CompProperties_Transporter">
        <restEffectiveness>0.5</restEffectiveness>  <!-- How well (1.0 = 100%) passengers can rest, eat, heal while aboard -->
        <massCapacity>35</massCapacity> <!-- weight in kg -->
      </li>
      <li Class="SRTS.CompProperties_LaunchableSRTS">
        <travelSpeed>1</travelSpeed> <!-- Vanilla drop pod is 25 speed, min 1, max 100 -->
        <fuelPerTile>1</fuelPerTile> <!-- Drop pod cost is 2.25 per tile. min 1, max 6. Why'd we cap it at 6? I can't remember. -->
        <minPassengers>1</minPassengers>
        <maxPassengers>1</maxPassengers>
        <spaceFaring>false</spaceFaring>  <!-- For save our ship 2 -->
        <shuttleBayLanding>false</shuttleBayLanding>
      </li>
      <li Class="CompProperties_Refuelable">
        <fuelCapacity>20</fuelCapacity>
        <targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
        <initialConfigurableTargetFuelLevel>20</initialConfigurableTargetFuelLevel>
        <fuelFilter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </fuelFilter>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <initialFuelPercent>0.25</initialFuelPercent>
        <autoRefuelPercent>1</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <drawOutOfFuelOverlay>false</drawOutOfFuelOverlay>
        <drawFuelGaugeInMap>false</drawFuelGaugeInMap>
      </li>
    </comps>
    <researchPrerequisites>
    </researchPrerequisites>
    <constructionSkillPrerequisite>4</constructionSkillPrerequisite>
    <uiIconScale>0.75</uiIconScale>
    <killedLeavings>
      <WoodLog>4</WoodLog>
    </killedLeavings>
  </ThingDef>

</Defs>
